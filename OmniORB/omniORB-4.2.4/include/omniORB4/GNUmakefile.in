  for d in $(TRANSPORTS);\
    do echo $(BASE_OMNI_TREE)/src/lib/omniORB/orbcore/$$d/*.h;\
  done)

include $(TOP)/mk/beforeauto.mk

install:: $(HEADERS) $(TRANSPORT_HEADERS)
	@(dir="$(INSTALLDIR)"; \
          for file in $^; do \
            $(ExportFileToDir) \
          done )

